{
  "name": "pdf-toolkit-pro",
  "version": "1.0.0",
  "description": "革命性的预览即编辑PDF工具",
  "main": "dist/main/main.js",
  "homepage": "./",
  "author": "PDF Toolkit Pro Team",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": "20.11.0",
    "npm": "10.2.4"
  },
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "wait-on http://localhost:5173 && electron .",
    "build": "npm run build:renderer && npm run build:main",
    "build:renderer": "vite build",
    "build:main": "tsc -p tsconfig.main.json",
    "preview": "vite preview",
    "package": "npm run build && electron-builder",
    "package:win": "npm run build && electron-builder --win",
    "package:mac": "npm run build && electron-builder --mac",
    "test": "jest",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "playwright test",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "type-check": "tsc --noEmit",
    "db:init": "node scripts/init-db.js",
    "postinstall": "electron-builder install-app-deps && npm run rebuild",
    "rebuild": "electron-rebuild",
    "fix:deps": "node scripts/emergency-fix.js",
    "health-check": "node scripts/health-check.js",
    "start:preview": "node scripts/start-preview.js",
    "build:preview": "node scripts/build-preview.js"
  },
  "dependencies": {
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "zustand": "4.4.7",
    "pdfjs-dist": "4.0.379",
    "pdf-lib": "1.17.1",
    "@tensorflow/tfjs": "4.15.0",
    "@tensorflow/tfjs-node": "4.15.0",
    "sqlite3": "5.1.6",
    "express": "4.18.2",
    "cors": "2.8.5",
    "helmet": "7.1.0",
    "winston": "3.11.0",
    "joi": "17.11.0",
    "electron-updater": "6.1.7",
    "electron-store": "8.1.0"
  },
  "devDependencies": {
    "electron": "27.3.11",
    "electron-builder": "24.9.1",
    "electron-rebuild": "3.2.9",
    "@types/react": "18.2.45",
    "@types/react-dom": "18.2.18",
    "@types/node": "20.10.5",
    "@types/express": "4.17.21",
    "@types/cors": "2.8.17",
    "@types/jest": "29.5.8",
    "typescript": "5.3.3",
    "vite": "5.0.10",
    "@vitejs/plugin-react": "4.2.1",
    "vite-plugin-electron": "0.28.1",
    "vite-plugin-electron-renderer": "0.14.5",
    "tailwindcss": "3.3.6",
    "postcss": "8.4.32",
    "autoprefixer": "10.4.16",
    "eslint": "8.56.0",
    "@typescript-eslint/parser": "6.15.0",
    "@typescript-eslint/eslint-plugin": "6.15.0",
    "eslint-plugin-react": "7.33.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "prettier": "3.1.1",
    "jest": "29.7.0",
    "@testing-library/react": "14.1.2",
    "@testing-library/jest-dom": "6.1.5",
    "playwright": "1.40.1",
    "concurrently": "8.2.2",
    "wait-on": "7.2.0",
    "cross-env": "7.0.3"
  },
  "build": {
    "appId": "com.pdftoolkit.pro",
    "productName": "PDF Toolkit Pro",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "assets/**/*",
      "package.json"
    ],
    "electronDownload": {
      "mirror": "https://npmmirror.com/mirrors/electron/"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "assets/icon.icns"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "publish": {
      "provider": "github",
      "owner": "your-org",
      "repo": "pdf-toolkit-pro"
    }
  }
}